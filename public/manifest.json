{
    "manifest_version": 3,
    "name": "Tuboji",
    "version": "1.0",
    "description": "Focus your YouTube experience. Block distracting elements and enhance productivity.",
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "128": "./icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "type": "module"
    },
    "optional_permissions": [
        "tabs"
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ]
}